<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.Pages.SecurityPage"
             BackgroundImageSource="Background.jpg"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="TextColor" Value="AliceBlue" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
            <Entry x:Name="entry1" MaxLength="1" Keyboard="Numeric" WidthRequest="60" />
            <Entry x:Name="entry2" MaxLength="1" Keyboard="Numeric" WidthRequest="60" />
            <Entry x:Name="entry3" MaxLength="1" Keyboard="Numeric" WidthRequest="60" />
            <Entry x:Name="entry4" MaxLength="1" Keyboard="Numeric" WidthRequest="60" Completed="Entry_Completed" />
        </StackLayout>
        <Label x:Name="info" FontSize="35" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalTextAlignment="Center" TextColor="Black"/>
    </StackLayout>

</ContentPage>