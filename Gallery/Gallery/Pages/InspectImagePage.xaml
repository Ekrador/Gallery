<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.Pages.InspectImagePage"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="2,30" BackgroundColor="Black" >
        <Image Source="{Binding InspectedPhoto.FullName}" Aspect="Fill" />
        <Label Text="{Binding InspectedPhoto.Date}" FontSize="20" FontAttributes="Bold" TextColor="Black" VerticalOptions="End" HorizontalOptions="End" Padding="2"/>
    </Grid>
</ContentPage>